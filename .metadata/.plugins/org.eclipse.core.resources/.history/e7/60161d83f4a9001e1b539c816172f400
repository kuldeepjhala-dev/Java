import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;

public class MyReceiverClass {
	public static void main(String[] args) {
		try
		{
			DatagramSocket reciever = new DatagramSocket(1234);
			byte b[] = new byte[1024];
			String msg = "";
			DatagramPacket pack = null;
			
			pack = new DatagramPacket(b, b.length);
			reciever.receive(pack);
			b = pack.getData();
			msg = new String(b);
			
			StringBuffer sb_msg = new StringBuffer(msg);
			sb_msg.reverse();
			msg = new String(sb_msg);
			b = msg.getBytes();
			
			InetAddress ip = InetAddress.getByName("localhost");
			pack = new DatagramPacket(b,b.length,ip,4321);
			reciever.send(pack);
		}
		catch(Exception e)
		{
			System.out.println("Reciever-class-error : " + e.getMessage());
		}

	}
}
